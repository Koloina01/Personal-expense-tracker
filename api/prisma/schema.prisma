generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExpenseType {
  ONE_TIME
  RECURRING
}

model User {
  id                  Int                  @id @default(autoincrement())
  fullName            String
  email               String               @unique
  password            String
  expenses            Expense[]
  incomes             Income[]
  receiptUploads      ReceiptUpload[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  budget              Decimal?             @default(0)
  userCategoryBudgets UserCategoryBudget[]
  summary             String               @db.Text
}

model Category {
  id                  Int                  @id @default(autoincrement())
  name                String               @unique
  expenses            Expense[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  userCategoryBudgets UserCategoryBudget[]
}

model Expense {
  id              Int            @id @default(autoincrement())
  amount          Decimal
  date            DateTime?
  categoryId      Int
  category        Category       @relation(fields: [categoryId], references: [id])
  description     String?
  type            ExpenseType    @default(ONE_TIME)
  creationDate    DateTime       @default(now())
  startDate       DateTime?
  endDate         DateTime?
  userId          Int
  user            User           @relation(fields: [userId], references: [id])
  receiptUploadId Int?
  receiptUpload   ReceiptUpload? @relation(fields: [receiptUploadId], references: [id])

  @@index([userId])
  @@index([categoryId])
  @@index([type])
}

model Income {
  id           Int      @id @default(autoincrement())
  amount       Decimal
  date         DateTime
  source       String
  description  String?
  creationDate DateTime @default(now())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([date])
}

model ReceiptUpload {
  id          Int       @id @default(autoincrement())
  filename    String
  url         String
  contentType String
  size        Int
  uploadedAt  DateTime  @default(now())
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  expense     Expense[]
}

model UserCategoryBudget {
  id         Int     @id @default(autoincrement())
  userId     Int
  categoryId Int
  budget     Decimal @default(0)

  user     User     @relation(fields: [userId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])

  @@unique([userId, categoryId])
}
